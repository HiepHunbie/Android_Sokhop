<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100"
    android:background="#ffffff">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="35"
        android:layout_gravity="center"
        android:id="@+id/imgIcon"
        android:src="@drawable/ic_dangnhap"
        android:scaleType="fitXY"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:id="@+id/txtError"
        android:textColor="@android:color/holo_red_light"
        android:gravity="center_vertical|center_horizontal"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:weightSum="100"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:src="@drawable/ic_username"
            android:layout_gravity="center_vertical"
            />

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="75"
            android:id="@+id/edtUserName"
            android:hint="@string/company"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="#3A494C"
            android:singleLine="true"
            android:textSize="@dimen/_13sdp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:id="@+id/txtErrorTenTC"
            android:text="!"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_2sdp"
            android:textColor="@color/colorPrimary"
            android:visibility="gone"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:weightSum="100"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:src="@drawable/ic_phone"
            android:layout_gravity="center_vertical"
            />
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="75"
            android:id="@+id/edtPhoneNumber"
            android:hint="@string/hotline"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="#3A494C"
            android:singleLine="true"
            android:inputType="number"
            android:textSize="@dimen/_13sdp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:id="@+id/txtErrorHoline"
            android:text="!"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_2sdp"
            android:textColor="@color/colorPrimary"
            android:visibility="gone"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:weightSum="100"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:src="@drawable/ic_mail"
            android:layout_gravity="center_vertical"
            />
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="75"
            android:id="@+id/edtEmail"
            android:hint="@string/email"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="#3A494C"
            android:singleLine="true"
            android:textSize="@dimen/_13sdp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:id="@+id/txtErrorEmail"
            android:text="!"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_2sdp"
            android:textColor="@color/colorPrimary"
            android:visibility="gone"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:weightSum="100"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:src="@drawable/ic_pass"
            android:layout_gravity="center_vertical"
            />
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="75"
            android:id="@+id/edtPassword"
            android:hint="@string/password"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="#3A494C"
            android:singleLine="true"
            android:inputType="textPassword"
            android:textSize="@dimen/_13sdp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:id="@+id/txtErrorMatKhau"
            android:text="!"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_2sdp"
            android:textColor="@color/colorPrimary"
            android:visibility="gone"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:weightSum="100"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:src="@drawable/ic_pass"
            android:layout_gravity="center_vertical"
            />
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="75"
            android:id="@+id/edtRetryPassword"
            android:hint="@string/retry_password"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="#3A494C"
            android:singleLine="true"
            android:inputType="textPassword"
            android:textSize="@dimen/_13sdp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:id="@+id/txtErrorNLMatKhau"
            android:text="!"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_2sdp"
            android:textColor="@color/colorPrimary"
            android:visibility="gone"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:weightSum="100"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="80"
            android:id="@+id/btnNext"
            android:background="@drawable/button_dangky"
            android:onClick="loginOnClick"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="horizontal"
        android:weightSum="100">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            />
        <com.example.ev.SoKhop.Utils.AutoResizeTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="60"
            android:text="@string/ban_da_co"
            android:gravity="right|center_vertical"
            android:textColor="#707070"
            android:singleLine="true"/>
        <com.example.ev.SoKhop.Utils.AutoResizeTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:text="@string/dangnhap"
            android:gravity="left|center_vertical"
            android:textColor="#3399FF"
            android:id="@+id/txtDangNhap"
            android:singleLine="true"
            android:paddingLeft="@dimen/_2sdp"/>
    </LinearLayout>
</LinearLayout>