<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#ffffff">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dialog"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingRight="@dimen/_20sdp"
    android:paddingLeft="@dimen/_20sdp">
    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="TITLE"
        android:textColor="#000"
        android:textSize="@dimen/_13sdp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_10sdp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="40"
            android:text="@string/vitri"
            android:textColor="#3A494C"
            android:gravity="center_vertical"
            android:textSize="@dimen/_11sdp"/>
        <AutoCompleteTextView
            android:id="@+id/autocomplete_Vitri"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="60"
            android:hint="@string/vitri"
            android:ems="10"
            android:background="@drawable/custom_edittext"
            android:paddingLeft="@dimen/_10sdp"
            android:textSize="@dimen/_11sdp"
            android:completionThreshold="1"/>
        <!--<com.toptoche.searchablespinnerlibrary.SearchableSpinner-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_weight="60"-->
            <!--android:id="@+id/spPosition"-->
            <!--android:spinnerMode="dropdown"-->
            <!--android:background="@drawable/custom_spinner"-->
            <!--android:visibility="gone"></com.toptoche.searchablespinnerlibrary.SearchableSpinner>-->

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_10sdp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="40"
            android:text="@string/noilamviec"
            android:textColor="#3A494C"
            android:gravity="center_vertical"
            android:textSize="@dimen/_11sdp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="25"
            android:text="@string/city"
            android:textColor="#3A494C"
            android:gravity="center_vertical"
            android:textSize="@dimen/_8sdp"/>
        <!--<EditText                 android:paddingLeft="@dimen/_5sdp"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="@dimen/_30sdp"-->
            <!--android:layout_weight="35"-->
            <!--android:textColor="#3A494C"-->
            <!--android:gravity="center_vertical"-->
            <!--android:textSize="@dimen/_11sdp"-->
            <!--android:background="@drawable/custom_edittext"-->
            <!--android:id="@+id/edtCity"/>-->
        <AutoCompleteTextView
            android:id="@+id/autocomplete_Location"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="35"
            android:hint="@string/nhap_dia_chi"
            android:textSize="@dimen/_10sdp"
            android:ems="10"
            android:background="@drawable/custom_edittext"
            android:paddingLeft="@dimen/_8sdp"
            android:completionThreshold="1"/>
        <!--<Spinner-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_weight="35"-->
            <!--android:id="@+id/spCity"-->
            <!--android:spinnerMode="dropdown"-->
            <!--android:background="@drawable/custom_spinner"></Spinner>-->
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_10sdp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="40"
            android:gravity="center_vertical"
            android:textSize="@dimen/_11sdp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="25"
            android:text="@string/town"
            android:textColor="#3A494C"
            android:gravity="center_vertical"
            android:textSize="@dimen/_8sdp"/>
        <EditText                 android:paddingLeft="@dimen/_5sdp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="35"
            android:textColor="#3A494C"
            android:gravity="center_vertical"
            android:textSize="@dimen/_11sdp"
            android:background="@drawable/custom_edittext"
            android:id="@+id/edtTown"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_10sdp"
        android:visibility="gone">
        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="40"
            android:gravity="center_vertical"
            android:textSize="@dimen/_11sdp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="25"
            android:text="@string/street"
            android:textColor="#3A494C"
            android:gravity="center_vertical"
            android:textSize="@dimen/_8sdp"/>
        <EditText                 android:paddingLeft="@dimen/_5sdp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="35"
            android:textColor="#3A494C"
            android:gravity="center_vertical"
            android:textSize="@dimen/_11sdp"
            android:background="@drawable/custom_edittext"
            android:id="@+id/edtStreet"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_10sdp"
        android:visibility="gone">
        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="40"
            android:gravity="center_vertical"
            android:textSize="@dimen/_11sdp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="25"
            android:text="@string/number"
            android:textColor="#3A494C"
            android:gravity="center_vertical"
            android:textSize="@dimen/_8sdp"/>
        <EditText                 android:paddingLeft="@dimen/_5sdp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="35"
            android:textColor="#3A494C"
            android:gravity="center_vertical"
            android:textSize="@dimen/_11sdp"
            android:background="@drawable/custom_edittext"
            android:id="@+id/edtNumber"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_10sdp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="40"
            android:text="@string/ThoiGianLamViec"
            android:textColor="#3A494C"
            android:gravity="center_vertical"
            android:textSize="@dimen/_11sdp"
            android:singleLine="true"/>

        <Spinner
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="60"
            android:id="@+id/spThoiGianLamViec"
            android:background="@drawable/custom_spinner"
            ></Spinner>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:text="@string/thunhap"
        android:textColor="#3A494C"
        android:gravity="center_vertical"
        android:textSize="@dimen/_13sdp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:text="@string/luongcoban"
        android:textColor="#3A494C"
        android:gravity="center_vertical"
        android:textSize="@dimen/_11sdp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_10sdp">
        <CheckBox
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="15"
            android:id="@+id/cbUpLuongCoBan"
            android:button="@drawable/bg_checkbox"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="35"
            android:text="@string/up"
            android:textColor="#3A494C"
            android:gravity="center_vertical"
            android:textSize="@dimen/_11sdp"
            android:paddingLeft="@dimen/_5sdp"/>
        <EditText                 android:paddingLeft="@dimen/_5sdp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:textColor="#3A494C"
            android:gravity="center_vertical"
            android:textSize="@dimen/_11sdp"
            android:background="@drawable/custom_edittext"
            android:id="@+id/edtUpLuongCoBan"
            android:hint="@string/nhapmucluong"
            android:textColorHint="@android:color/darker_gray"
            android:inputType="number"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_10sdp">

        <CheckBox
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="15"
            android:id="@+id/cbBetweenLuongCoBan"
            android:button="@drawable/bg_checkbox"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="35"
            android:text="@string/between"
            android:textColor="#3A494C"
            android:gravity="center_vertical"
            android:textSize="@dimen/_11sdp"
            android:paddingLeft="@dimen/_5sdp"/>
        <EditText                 android:paddingLeft="@dimen/_5sdp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="23"
            android:textColor="#3A494C"
            android:gravity="center_vertical"
            android:textSize="@dimen/_11sdp"
            android:background="@drawable/custom_edittext"
            android:id="@+id/edtBetweenLuongCoBanFrom"
            android:inputType="number"
            android:hint="@string/from"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="4"
            android:textColor="#3A494C"
            android:text="-"
            android:gravity="center_vertical|center_horizontal"/>
        <EditText                 android:paddingLeft="@dimen/_5sdp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="23"
            android:textColor="#3A494C"
            android:gravity="center_vertical"
            android:textSize="@dimen/_11sdp"
            android:background="@drawable/custom_edittext"
            android:id="@+id/edtBetweenLuongCoBanTo"
            android:inputType="number"
            android:hint="@string/to"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_10sdp">
        <CheckBox
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="15"
            android:id="@+id/cbDownLuongCoBan"
            android:button="@drawable/bg_checkbox"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="35"
            android:text="@string/down"
            android:textColor="#3A494C"
            android:gravity="center_vertical"
            android:textSize="@dimen/_11sdp"
            android:paddingLeft="@dimen/_5sdp"/>
        <EditText                 android:paddingLeft="@dimen/_5sdp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:textColor="#3A494C"
            android:gravity="center_vertical"
            android:textSize="@dimen/_11sdp"
            android:background="@drawable/custom_edittext"
            android:id="@+id/edtDownLuongCoBan"
            android:hint="@string/nhapmucluong"
            android:textColorHint="@android:color/darker_gray"
            android:inputType="number"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_10sdp"
        android:visibility="gone">
        <CheckBox
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="10"
            android:id="@+id/cbExactlyLuongCoBan"
            android:button="@drawable/bg_checkbox"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="40"
            android:text="@string/exactly"
            android:textColor="#3A494C"
            android:gravity="center_vertical"
            android:textSize="@dimen/_11sdp"
            android:paddingLeft="@dimen/_10sdp"/>
        <EditText                 android:paddingLeft="@dimen/_5sdp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:textColor="#3A494C"
            android:gravity="center_vertical"
            android:textSize="@dimen/_11sdp"
            android:background="@drawable/custom_edittext"
            android:id="@+id/edtExactlyLuongCoBan"
            android:hint="@string/nhapmucluong"
            android:textColorHint="@android:color/darker_gray"
            android:inputType="number"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_10sdp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="40"
            android:text="@string/thuongVND"
            android:textColor="#3A494C"
            android:gravity="center_vertical"
            android:textSize="@dimen/_11sdp"/>
        <EditText                 android:paddingLeft="@dimen/_5sdp"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="60"
            android:textColor="#3A494C"
            android:gravity="center_vertical"
            android:textSize="@dimen/_11sdp"
            android:background="@drawable/custom_edittext"
            android:id="@+id/edt_thuong"
            android:inputType="number"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_10sdp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="40"
            android:text="@string/phu_cap_gachngang"
            android:textColor="#3A494C"
            android:gravity="center_vertical"
            android:textSize="@dimen/_11sdp"/>
        <EditText                 android:paddingLeft="@dimen/_5sdp"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="60"
            android:textColor="#3A494C"
            android:gravity="center_vertical"
            android:textSize="@dimen/_11sdp"
            android:background="@drawable/custom_edittext"
            android:id="@+id/edt_phucap"
            android:inputType="number"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_10sdp"
        android:visibility="gone">
        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="40"
            android:text="@string/tong_thu_nhap_gachngang"
            android:textColor="#3A494C"
            android:gravity="center_vertical"
            android:textSize="@dimen/_11sdp"/>
        <EditText                 android:paddingLeft="@dimen/_5sdp"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="60"
            android:textColor="#3A494C"
            android:gravity="center_vertical"
            android:textSize="@dimen/_11sdp"
            android:background="@drawable/custom_edittext"
            android:id="@+id/edt_tongthunhap"
            android:inputType="number"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_25sdp"
        android:textColor="#3A494C"
        android:text="@string/muctieunghenghiep"
        android:gravity="center_vertical"
        android:textSize="@dimen/_11sdp"/>
    <EditText                 android:paddingLeft="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:textColor="#3A494C"
        android:gravity="left|top"
        android:textSize="@dimen/_11sdp"
        android:background="@drawable/custom_edittext"
        android:id="@+id/edtMucTieuNgheNghiep"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_25sdp"
        android:textColor="#3A494C"
        android:text="@string/su_nghiep"
        android:gravity="center_vertical"
        android:textSize="@dimen/_11sdp"/>
    <EditText                 android:paddingLeft="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:textColor="#3A494C"
        android:gravity="center_vertical"
        android:textSize="@dimen/_11sdp"
        android:background="@drawable/custom_edittext"
        android:id="@+id/edtSuNghiep"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:text="Hủy"
            android:id="@+id/btnCancel"
            android:background="#ffffff"
            android:textColor="#3A494C"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:text="Thêm Mới"
            android:id="@+id/btnAdd"
            android:background="#ffffff"
            android:textColor="#3A494C"/>
    </LinearLayout>

</LinearLayout>
</ScrollView>