<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#EEEEEE">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="60">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:text="@string/quatrinhlamviec"
                android:textColor="#3A494C"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/_10sdp"
                android:background="#ffffff"
                android:id="@+id/txtQuatrinhlamviec"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@android:color/darker_gray"
                android:layout_below="@+id/txtQuatrinhlamviec"
                android:id="@+id/view1"/>
            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#3A494C"
                android:id="@+id/lvExp"
                android:background="#ffffff"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_below="@+id/view1"
                android:divider="#EEEEEE"
                android:dividerHeight="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2sdp"
            android:background="#EEEEEE"
            android:layout_below="@+id/lvExp"
            android:id="@+id/view2"/>
        <RelativeLayout
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="40">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:text="@string/kinh_nghiem"
                android:textColor="#3A494C"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/_10sdp"
                android:background="#ffffff"
                android:id="@+id/txtExp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@android:color/darker_gray"
                android:layout_below="@+id/txtExp"
                android:id="@+id/view3"/>
            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#3A494C"
                android:id="@+id/lvPositionTimeline"
                android:background="#ffffff"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_below="@+id/view3"
                android:divider="#EEEEEE"
                android:dividerHeight="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"/>
            <ImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:id="@+id/btnAdd"
                android:src="@drawable/button_addnew"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_30sdp"/>
        </RelativeLayout>
    </LinearLayout>

</ScrollView>