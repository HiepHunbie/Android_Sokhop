<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <WebView
        android:id="@+id/wvContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <RelativeLayout
        android:id="@+id/rlNavigationArea"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="0"
        android:background="#EFEFF4" >

        <ImageView
            android:id="@+id/btnPrevious"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@drawable/vt_bg_transparent_clickable"
            android:onClick="btnPreviousOnClick"
            android:paddingBottom="@dimen/vt_common_dimen_smallest"
            android:paddingLeft="@dimen/vt_common_dimen_normal"
            android:paddingRight="@dimen/vt_common_dimen_normal"
            android:paddingTop="@dimen/vt_common_dimen_smallest"
            android:src="@drawable/vt_activity_webview_btn_previous" />

        <ImageView
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/btnPrevious"
            android:background="@drawable/vt_bg_transparent_clickable"
            android:onClick="btnNextOnClick"
            android:paddingBottom="@dimen/vt_common_dimen_smallest"
            android:paddingLeft="@dimen/vt_common_dimen_normal"
            android:paddingRight="@dimen/vt_common_dimen_normal"
            android:paddingTop="@dimen/vt_common_dimen_smallest"
            android:src="@drawable/vt_activity_webview_btn_next" />

        <ImageView
            android:id="@+id/btnRefresh"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/vt_common_dimen_xlarge"
            android:background="@drawable/vt_bg_transparent_clickable"
            android:onClick="btnRefreshOnClick"
            android:paddingBottom="@dimen/vt_common_dimen_smallest"
            android:paddingLeft="@dimen/vt_common_dimen_normal"
            android:paddingRight="@dimen/vt_common_dimen_normal"
            android:paddingTop="@dimen/vt_common_dimen_smallest"
            android:src="@drawable/vt_activity_webview_btn_reload" />
    </RelativeLayout>

</LinearLayout>